{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "app.ts",
    "server.ts",
    "routes/**/*.ts",
    "models/**/*.ts",
    "helper/**/*.ts",
    "middlewares/**/*.ts",
    "config/**/*.ts",
    "utils/**/*.ts"
  ],
  "exclude": [
    "src/**",
    "node_modules",
    "dist"
  ]
}
