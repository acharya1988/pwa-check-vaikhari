{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "src/app/(auth)/login/**/*.ts",
    "src/app/(auth)/login/**/*.tsx",
    "src/app/admin/layout.tsx",
    "src/app/admin/layout-client.tsx",
    "src/hooks/**/*.ts",
    "src/hooks/**/*.tsx",
    "src/lib/**/*.ts",
    "src/lib/**/*.tsx",
    "src/components/profile/user-about.tsx"
  ],
  "exclude": [
    "node_modules",
    "usr/**",
    "scripts/**",
    "src/actions/**",
    "src/services/**",
    "src/components/**",
    "src/pages/**",
    "src/types/**",
    ".next/**"
  ]
}

